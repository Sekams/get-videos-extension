{
  "manifest_version": 2,

  "name": "Get Videos",
  "description": "This is a tool for grabbing videos from websites.",
  "version": "1.0",
  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
   "128": "icon128.png" 
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content.js"]
  }],
  "browser_action": {
    "default_icon": "icon128.png",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab"]
}
